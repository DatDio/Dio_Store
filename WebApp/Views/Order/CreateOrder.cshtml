@using ViewModel.Order;
@model OrderVM
@{
	ViewData["Title"] = "CreateOrder";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

	<main class="main">
		<div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
			<div class="container">
				<h1 class="page-title">Checkout<span>Shop</span></h1>
			</div><!-- End .container -->
		</div><!-- End .page-header -->
		<nav aria-label="breadcrumb" class="breadcrumb-nav">
			<div class="container">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
					<li class="breadcrumb-item"><a href="#">Cửa hàng</a></li>
					<li class="breadcrumb-item active" aria-current="page">Thanh toán</li>
				</ol>
			</div><!-- End .container -->
		</nav><!-- End .breadcrumb-nav -->

		<div class="page-content">
			<div class="checkout">
				<div class="container">
					<form action="CreateOrder" method="post">
						<div class="row">
							<div class="col-lg-9">
								<h2 class="checkout-title">Chi tiết đơn hàng</h2><!-- End .checkout-title -->

								<label>Họ và tên *</label>
								<input type="text" class="form-control" required asp-for="ShipName">
								
								<label>Street address *</label>
								<input type="text" class="form-control" placeholder="Ghi rõ địa chỉ" required asp-for="ShipAddress">

								<div class="row">
									<div class="col-sm-6">
										<label>Số điện thoại</label>
										<input type="text" class="form-control" required asp-for="ShipPhoneNumber">
									</div><!-- End .col-sm-6 -->

									<div class="col-sm-6">
										<label>Email *</label>
										<input type="email" class="form-control" required asp-for="ShipEmail">
									</div><!-- End .col-sm-6 -->
								</div><!-- End .row -->
								<label>Ghi chú cho đơn hàng</label>
								<textarea class="form-control" cols="30" rows="4" placeholder="Ghi chú " asp-for="ShipAddress"></textarea>
							</div><!-- End .col-lg-9 -->
							<aside class="col-lg-3">
								<div class="summary">
									<h3 class="summary-title">Đơn hàng của bạn</h3><!-- End .summary-title -->

									<table class="table table-summary">
										<thead>
											<tr>
												<th>Sản phẩm</th>
												<th>Thành tiền</th>
											</tr>
										</thead>

										<tbody>
											@foreach (var item in Model.OrderDetails)
											{
												<tr>
													<td>
														@Html.HiddenFor(m => item.ProductId)
													</td>
													<td>
														<a href="#">@item.Product.ProductName</a>
														<a>x @item.Quantity</a>
													</td>
													<td>
														<span class="price-format">@item.SingleTotal()</span>
													</td>
												</tr>
												
											}
											<tr>
												<td>Phí vận chuyển:</td>
												<td>Free shipping</td>
											</tr>
											<tr class="summary-total">
												<td>Tổng thanh toán:</td>
												<td>
													<span class="price-format">	@Model.GetTotal()</span>
												</td>
											</tr>
										</tbody>
									</table><!-- End .table table-summary -->
									 <input type="hidden" name="PaymentMethod" id="PaymentMethod">
									<div class="accordion-summary" id="accordion-payment">
										<div class="card">
											<div class="card-header" id="heading-1">
												<h2 class="card-title">
													<a role="button" data-toggle="collapse" href="#collapse-1" aria-expanded="true" aria-controls="collapse-1"
												   onclick="setPaymentMethod('Banktranfer')">
														Chuyển khoản ngân hàng
													</a>
												</h2>
											</div><!-- End .card-header -->
											<div id="collapse-1" class="collapse show" aria-labelledby="heading-1" data-parent="#accordion-payment">
												<div class="card-body">
													Thanh toán online qua ngân hàng
												</div><!-- End .card-body -->
											</div><!-- End .collapse -->
										</div><!-- End .card -->
										<div class="card">
											<div class="card-header" id="heading-3">
												<h2 class="card-title">
													<a class="collapsed" role="button" data-toggle="collapse" href="#collapse-3" aria-expanded="false" aria-controls="collapse-3"
												   onclick="setPaymentMethod('COD')">
														COD
													</a>
												</h2>
											</div><!-- End .card-header -->
											<div id="collapse-3" class="collapse" aria-labelledby="heading-3" data-parent="#accordion-payment">
												<div class="card-body">
													Thanh toán khi nhận hàng
												</div><!-- End .card-body -->
											</div><!-- End .collapse -->
										</div><!-- End .card -->

										<div class="card">
											<div class="card-header" id="heading-4">
												<h2 class="card-title">
													<a class="collapsed" role="button" data-toggle="collapse" href="#collapse-4" aria-expanded="false" aria-controls="collapse-4"
												   onclick="setPaymentMethod('Paypal')">
														PayPal <small class="float-right paypal-link">What is PayPal?</small>
													</a>
												</h2>
											</div><!-- End .card-header -->
											<div id="collapse-4" class="collapse" aria-labelledby="heading-4" data-parent="#accordion-payment">
												<div class="card-body">
													Thanh toán qua paypal
												</div><!-- End .card-body -->
											</div><!-- End .collapse -->
										</div><!-- End .card -->

										<div class="card">
											<div class="card-header" id="heading-5">
												<h2 class="card-title">
													<a class="collapsed" role="button" data-toggle="collapse" href="#collapse-5" aria-expanded="false" aria-controls="collapse-5"
												   onclick="setPaymentMethod('VNPay')">
														 VNPay
													</a>
												</h2>
											</div><!-- End .card-header -->
											<div id="collapse-5" class="collapse" aria-labelledby="heading-5" data-parent="#accordion-payment">
												<div class="card-body">
													Thanh toán qua VNPay
												</div><!-- End .card-body -->
											</div><!-- End .collapse -->
										</div><!-- End .card -->
									</div><!-- End .accordion -->
								<img src="~/assets/images/payments-summary.png" alt="payments cards">
									<button type="submit" class="btn btn-outline-primary-2 btn-order btn-block mt-2">
										<span class="btn-text">Thanh toán</span>
										<span class="btn-hover-text">Thanh toán</span>
									</button>
								@Html.ValidationSummary(true, "", new { @class = "text-danger" })
								</div><!-- End .summary -->
							</aside><!-- End .col-lg-3 -->
						</div><!-- End .row -->
					</form>
				</div><!-- End .container -->
			</div><!-- End .checkout -->
		</div><!-- End .page-content -->
	</main><!-- End .main -->
<script>
	function setPaymentMethod(method) {
		document.getElementById('PaymentMethod').value = method;
	}
</script>